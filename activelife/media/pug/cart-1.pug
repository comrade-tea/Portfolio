extends layout/master

block title
	title cart
block content
	div.p-cart
		+pageHead("Cart")

		div.container-lg
			div.cart-steps
				div.cart-steps__item
					a.cart-steps__link.cart-steps__link--current(href="#") 1. Checkout
				div.cart-steps__item
					a.cart-steps__link(href="#") 2. Shipping & Payment
				div.cart-steps__item
					a.cart-steps__link(href="#") 3. Confirmation

			div.cart
				div.cart-table
					div.cart-table__head.d-flex
						div.cart-table__cell item
						div.cart-table__cell count
						div.cart-table__cell price
						div.cart-table__cell subtotal
						div.cart-table__cell

					div.cart-table__body
						- for(var x = 0; x < 2; x++)
							div.cart-table__row
								div.cart-table__cell
									div.cart-product
										div.cart-product__img-w: img(src="media/img/cart-product.jpg" alt="")
										div.cart-product__info
											div.cart-product__title Posture Classic
											div.cart-product__types
												div COLOR: #[span BLACK]
												div SIZE: #[span XL]

								div.cart-table__cell
									div.cart-table__count.quantity
										input(type='number', min='1', max='9', step='1', value='1')

								div.cart-table__cell
									div.cart-table__price
										div.old-price $50
										div.current-price $39.95
								div.cart-table__cell
									div.cart-table__subtotal $39.95
								div.cart-table__cell.justify-content-center
									button.cart-table__remove(type="button")
										i.icon-close

				div.cart-extra.row.align-items-center
					div.col-sm-6
						a.cart-extra__link(href="#")
							i.icon-arrow.icon-flip.mr-3
							|Continue Shopping
					div.col-sm-6.d-flex.justify-content-between.align-items-baseline
						div.cart-extra__ship Shipping cost: #[span free]
						div.cart-extra__cost Total cost: #[span $105.9]

				div.cart__payment.clearfix
					a.btn.btn--blob.float-right(href="#") Shipping & Payment




		include static-blocks/b-subscribe