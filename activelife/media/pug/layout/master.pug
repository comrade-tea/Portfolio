		//- script.
			paceOptions = {
				elements: false,
				ajax: false,
				restartOnPushState: false,
				restartOnRequestAfter: false
			};

	include ../mixins/page-head
	include ../mixins/page-card
	include ../mixins/checkbox
	include ../static-blocks/b-related

	body
		include header
		div.wrapper
			block content
		include footer

		// login pop-up
		div.remodal(data-remodal-id='login')
			button.remodal-close(data-remodal-action='close'): i.icon-close
			form.b-form(action="###")
				div.b-form__top
					h2.b-form__title Login
					div.b-form__soc-auth
						img(src="media/img/soc-auth.png" alt="")
					div.b-form__group
						div.b-form__field: input.input-default(type="email" placeholder="Email")
						div.b-form__field: input.input-default(type="password" placeholder="Password")
					div.b-form__link-wrap
						a.link-border(href="#") Forgot your password?
					button.btn.btn--blob.b-form__submit(type="submit") Sign in

				div.b-form__bot
					div.b-form__bot-inner
						button.btn.btn--blob.btn--white(type="button" data-remodal-target="create-account") Create account
						button.btn.btn--blob.btn--white(type="button" data-remodal-target="create-partners-account") Create partners account
						a.link-border(href="#") Read more about the partners programm

		// account pop-up
		div.remodal(data-remodal-id='create-account')
			button.remodal-close(data-remodal-action='close'): i.icon-close
			form.b-form(action="###")
				div.b-form__top
					h2.b-form__title Create account

					div.b-form__group
						div.b-form__field: input.input-default(type="email" placeholder="Email")
						div.b-form__field: input.input-default(type="text" placeholder="First name")
						div.b-form__field: input.input-default(type="text" placeholder="Last name")
						div.b-form__field: input.input-default(type="password" placeholder="Password")
					div.b-form__link-wrap
						+checkbox("Keep me logged in")

					button.btn.btn--blob.b-form__submit(type="submit") Create account

				div.b-form__bot
					div.b-form__bot-inner
						button.btn.btn--blob.btn--white(type="button" data-remodal-target="login") Sign In

		// account partners pop-up
		div.remodal(data-remodal-id='create-partners-account')
			button.remodal-close(data-remodal-action='close'): i.icon-close
			form.b-form(action="###")
				div.b-form__top
					h2.b-form__title Create partners account

					div.b-form__group
						div.b-form__field: input.input-default(type="email" placeholder="Email")
						div.b-form__field: input.input-default(type="text" placeholder="First name")
						div.b-form__field: input.input-default(type="text" placeholder="Last name")
						div.b-form__field: input.input-default(type="password" placeholder="Password")
					div.b-form__link-wrap
						+checkbox("Keep me logged in")

					button.btn.btn--blob.b-form__submit(type="submit") Create account

				div.b-form__bot
					div.b-form__bot-inner
						button.btn.btn--blob.btn--white(type="button" data-remodal-target="login") Sign In



